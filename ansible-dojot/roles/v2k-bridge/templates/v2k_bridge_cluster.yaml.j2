apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: v2k-bridge
  namespace: {{ dojot_namespace }}
spec:
  serviceName: "v2k-bridge"
  selector:
    matchLabels:
      app: v2k-bridge
  replicas: {{ dojot_vernemq_mqtt_replicas_to_scale }}
  template: #templates for the pods
    metadata:
      labels:
        app: v2k-bridge
    spec:
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: kubernetes.io/hostname
                operator: NotIn
                values:
                - verne-kafka
      containers:
      - name: v2k-bridge
        image: dojot/v2k-bridge:{{ dojot_v2k_version}}
        env:
        - name: EJBCA_ADDRESS
          value: "ejbca-wrapper:5583"
        - name: DATA_BROKER_ADDRESS
          value: "data-broker:80"
        - name: KAFKA_BROKER_LIST
          value: "kafka-server:9092"
        - name: SERVER_HOSTNAME
          value: "vernemq-k8s"
        - name: V2K_MQTT_CLIENT_ID
          value: "v2k-bridge"
        - name: V2K_MQTT_HOST
          value: "vernemq-k8s"
        - name: V2K_MQTT_SECURE
          value: "vernemq-k8s"
        - name: V2K_LOG_LEVEL
          value: "debug"


